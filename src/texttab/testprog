#!/usr/bin/env python3

from table import BasicTable

example_columns = [
    {
        "label": "Name",
        "width": 25,
        "align": "left",
    },
    {
        "label": "Email",
        "width": 32,
        "align": "centre",
    }
]

bt = BasicTable(columns=example_columns)

lines = bt.render()
for l in lines:
    print(l)
